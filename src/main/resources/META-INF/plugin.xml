<idea-plugin version="2">
    <id>${pluginId}</id>
    <name>${pluginNamePretty}</name>
    <version>${project.version}</version>
    <idea-version since-build="${sinceBuild}" until-build="${untilBuild}"/>

    <description>
    <![CDATA[
      Junie Voice Assistant - An IntelliJ plugin that provides voice interaction capabilities using OpenAI's Realtime API.
      Features include microphone input, real-time voice processing, and audio output for AI responses.
    ]]>
    </description>

    <change-notes>
    <![CDATA[
      No changes.
    ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Junie Voice"
                    displayName="Junie Voice"
                    icon="AllIcons.CodeWithMe.CwmMicAvatarOn"
                    anchor="right"
                    factoryClass="com.eric_eldard.VoiceAssistantToolWindowFactory"
                    canCloseContents="false"/>
    </extensions>

</idea-plugin>
